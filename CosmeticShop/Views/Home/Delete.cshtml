@model CosmeticShop.Models.Product

@{
    ViewBag.Title = "Удаление продукта";
}

<div>
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.Names)
        </dd>

        <dt>Описание</dt>
        <dd>
            @Html.DisplayFor(model => model.Descriptions)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>